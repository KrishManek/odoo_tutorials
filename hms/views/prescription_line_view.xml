<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hms_prescription_line_list" model="ir.ui.view">
        <field name="name">hms.prescription.line.list</field>
        <field name="model">hms.prescription.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="prescription_id" />
                <field name="product_id"/>
                <field name="qty" />
                <field name="price_unit" force_save="1"/>
                <field name="sub_total" force_save="1" />
            </list>
        </field>
    </record>
    <record id="view_hms_prescription_line_form" model="ir.ui.view">
        <field name="name">hms.prescription.line.form</field>
        <field name="model">hms.prescription.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group name="prescription" string="Prescription Details">
                            <field name="prescription_id" />
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="price_unit"/>
                            <field name="sub_total" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_hms_prescription_line" model="ir.actions.act_window">
        <field name="name">Prescription Details</field>
        <field name="res_model">hms.prescription.line</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_hms_prescription_line_sub" name="Prescription line" parent="menu_hms" action="action_hms_prescription_line"/>
</odoo>