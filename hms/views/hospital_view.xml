<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hospital_form" model="ir.ui.view">
        <field name="name">hospital.details.form</field>
        <field name="model">hospital.details</field>
        <field name="arch" type="xml">
            <form string="Hospital">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email" />
                            <field name="is_public" />
                            <field name="doctor_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_list" model="ir.ui.view">
        <field name="name">hospital.details.list</field>
        <field name="model">hospital.details</field>
        <field name="arch" type="xml">
            <list string="Hospital">
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email" />
                <field name="is_public" />
                <field name="doctor_ids"/>
            </list>
        </field>
    </record>

    <record id="action_hospital" model="ir.actions.act_window">
        <field name="name">Hospital</field>
        <field name="res_model">hospital.details</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hms" name="HMS"/>
    <menuitem id="menu_res_hospital_sub" name="Hospital" parent="menu_hms" action="action_hospital"/>

</odoo>